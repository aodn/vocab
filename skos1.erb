<?xml version="1.0" encoding="windows-1252"?>
<rdf:RDF 
xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" 
xmlns:skos="http://www.w3.org/2004/02/skos/core#" 
xmlns:dc="http://purl.org/dc/elements/1.1/" 
xmlns:dcterms="http://purl.org/dc/terms/" 
xmlns:foaf="http://xmlns.com/foaf/0.1/">

    
<% for @conceptScheme in @conn.exec(
    'select * from _rdf 
    where subject = $$http://vocab.aodn.org.au/def/ClassScheme/parameter1$$
    and predicate = $$rdf:type$$ 
    and object = $$skos:ConceptScheme$$' 
  ) %>
<skos:ConceptScheme rdf:about="<%= @conceptScheme['subject'] %>">

  <% for @e in @conn.exec(
    'select object from _rdf where predicate = $$dc:title$$ and subject = $1',
    [@conceptScheme['subject']]  
  ) %>
    <dc:title><%= @e['object'] %></dc:title>
  <% end%>

  <% for @e in @conn.exec(
    'select * from _rdf where predicate = $$dc:description$$ and subject = $1',
    [@conceptScheme['subject']]  
  ) %>
    <dc:description><%= @e['object'] %></dc:description>
  <% end %>

  <% for @e in @conn.exec(
    'select * from _rdf where predicate = $$dc:creator$$ and subject = $1',
    [@conceptScheme['subject']]  
  ) %>
    <dc:creator>
      <foaf:Organisation>
        <foaf:name><%= @e['object'] %></foaf:name>
      <foaf:/Organisation>
    </dc:creator>
  <% end %>

  <!-- element is repeated twice -->
  <% for @e in @conn.exec(
    'select * from _rdf where predicate = $$dc:publisher$$ and subject = $1',
    [@conceptScheme['subject']]  
  ) %>
    <dc:publisher>
      <foaf:Organisation>
        <foaf:name><%= @e['object'] %></foaf:name>
      <foaf:/Organisation>
    </dc:publisher>
  <% end %>

  <dc:rights>Freely Available For Reuse</dc:rights>

  <% for @e in @conn.exec(
    'select * from _rdf where predicate = $$dcterms:issued$$ and subject = $1',
    [@conceptScheme['subject']]  
  ) %>
  <dcterms:issued><%= @e['object'] %></dcterms:issued>
  <% end %>

</skos:ConceptScheme>
<% end %>





<% for @topConcept in @conn.exec(
  'select * from _rdf 
    where predicate = $$rdf:type$$ 
    and object = $$skos:TopConcept$$' 
  ) %>
<skos:TopConcept rdf:about="<%= @topConcept['subject'] %>">

    <% for @e in @conn.exec(
      'select object from _rdf where predicate = $$skos:prefLabel$$ and subject = $1',
      [@topConcept['subject']]  
    ) %>
    <skos:prefLabel><%= @e['object'] %></skos:prefLabel>
    <% end %>

    <% for @e in @conn.exec(
      'select object from _rdf where predicate = $$skos:definition$$ and subject = $1',
      [@topConcept['subject']]  
    ) %>
    <skos:definition><%= @e['object'] %></skos:definition>
    <% end %>

    <% for @e in @conn.exec(
      'select object from _rdf where predicate = $$dcterms:issued$$ and subject = $1',
      [@topConcept['subject']]  
    ) %>
    <dcterms:issued><%= @e['object'] %></dcterms:issued>
    <% end %>

    <% for @e in @conn.exec(
      'select object from _rdf where predicate = $$skos:inScheme$$ and subject = $1',
      [@topConcept['subject']]  
    ) %>
    <skos:inScheme><%= @e['object'] %></skos:inScheme>
    <% end %>






</skos:TopConcept>
<% end %>




